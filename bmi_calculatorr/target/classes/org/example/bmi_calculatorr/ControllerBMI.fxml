<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bmi.Controller" prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <ComboBox fx:id="unitSelector" onAction="#updateFields">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Адекватная метрика"/>
                    <String fx:value="Имперские"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Введите ваш рост:"/>
        <TextField fx:id="heightField" promptText="Введите рост"/>

        <Label text="Введите ваш вес:"/>
        <TextField fx:id="weightField" promptText="Введите вес"/>


        <Button text="Рассчитать BMI" onAction="#calculateBMI"/>
        <Button text="Очистить" onAction="#clearFields"/>

        <Label text="Ваш BMI:"/>
        <Label fx:id="resultLabel" text=" " style="-fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>